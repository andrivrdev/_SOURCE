<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileToREST.MainPage">

    <StackLayout>
        <Label Text="LOCATION"></Label>
        <Label Text="Update Seconds"></Label>
        <Entry x:Name="edtSeconds" Text="10"></Entry>
        <Label x:Name="lblNextUpdateSec" Text="Next Update In: "></Label>
        <Button x:Name="btnStart" Text="Start" Clicked="btnStart_Clicked"></Button>
        <Button x:Name="btnStop" Text="Stop" Clicked="btnStop_Clicked"></Button>
        <Entry x:Name="edtLocation"></Entry>
        <Label Text=""></Label>
        <Label Text="REST API"></Label>
        <Label Text=""></Label>
        <Button x:Name="btnPost" Clicked="btnPost_Clicked" Text="Post"></Button>
        <Entry x:Name="edtResult" WidthRequest="300" HeightRequest="500" FontSize="14" />
    </StackLayout>

</ContentPage>
