@model IEnumerable<ImageUpload.tblImage>

@{
    ViewBag.Title = "Index1";
}

<h2>Index1</h2>

<table>
    @foreach (var rec in Model)
    {
        <tr>
            <td style="max-width:1000px; max-height:1000px;">
                @{
                    var base64 = Convert.ToBase64String(rec.Image);
                    var imgsrc = string.Format("data:image/jpeg;base64,{0}", base64);
                }

                <img src='@imgsrc' />
            </td>
        </tr>
    }
</table>

