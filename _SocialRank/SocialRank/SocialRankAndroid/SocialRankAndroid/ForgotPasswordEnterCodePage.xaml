<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SocialRankAndroid.ForgotPasswordEnterCodePage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="primary">#ff3467</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="10" >
                <Label HeightRequest="110"  
                          HorizontalOptions="FillAndExpand" 
                          Text="Social Rank"
                          BackgroundColor="{StaticResource primary}"
                          TextColor="White" 
                          FontSize="40" 
                          HorizontalTextAlignment="Center"
                          VerticalTextAlignment="Center"/>


                <Entry x:Name="edtCode" Margin="20,20,20,0" 
                         HeightRequest="50" 
                         Placeholder="Code">
                </Entry>

                <Entry x:Name="edtEmail" Margin="20,0,20,0" 
                         HeightRequest="50" 
                         Placeholder="Email">
                </Entry>

                <Entry x:Name="edtPassword1" Margin="20,0,20,0" 
                        HeightRequest="50" IsPassword="true"
                        Placeholder="Password">
                </Entry>

                <Entry x:Name="edtPassword2" Margin="20,0,20,0" 
                        HeightRequest="50" IsPassword="true"
                        Placeholder="Confirm Password">
                </Entry>

                <Button x:Name="btnResetPassword" Clicked="btnResetPassword_Clicked"  Margin="20,0,20,0" 
                         HeightRequest="50" 
                         TextColor="White" 
                         Text="Reset Password"  
                         BackgroundColor="Gray"
                         HorizontalOptions="FillAndExpand"/>

                <Label  x:Name="lblBackToLogin" Margin="0,0,0,20" Text="Back to Login" VerticalOptions="EndAndExpand"
                        HorizontalOptions="Center" 
                        TextColor="{StaticResource primary}"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>