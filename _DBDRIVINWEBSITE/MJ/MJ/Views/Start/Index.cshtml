@model IEnumerable<SHARED.DATA.tblCompany>

@{
    ViewBag.Title = "Index";
}

<div class="container" style="margin-top:30px">
    
    <div class="col-md-12">
        <div class="modal-dialog" style="margin-bottom:0">
            <div class="modal-content">
                <div class="panel-heading">
