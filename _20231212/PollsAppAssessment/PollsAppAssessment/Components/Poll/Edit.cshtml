@page
@model PollsAppAssessment.Components.Poll.EditModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Poll</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Poll.Id" />
            <div class="form-group">
                <label asp-for="Poll.Question" class="control-label"></label>
                <input asp-for="Poll.Question" class="form-control" />
                <span asp-validation-for="Poll.Question" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Poll.AddOtherAnswerOption" /> @Html.DisplayNameFor(model => model.Poll.AddOtherAnswerOption)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Poll.AddNoneOfTheAboveAnswerOption" /> @Html.DisplayNameFor(model => model.Poll.AddNoneOfTheAboveAnswerOption)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
